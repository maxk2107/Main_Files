        </Section>

        {/* Minimal footer */}
        <footer className="border-t border-zinc-200 bg-white">
          <div className="mx-auto max-w-6xl px-4 py-10 text-sm text-zinc-600">
            <div className="text-center">© {new Date().getFullYear()} Max Kyrylyuk</div>
          </div>
        </footer>
      </main>
    </div>
  );
}
